#Biblioteca interativa para cadastros de clientes e livros
#perguntar ao usuario se já tem cadastro
#se sim, pedir login e senha
#se não, pedir para criar um novo cadastro
#após o login, permitir que o usuário cadastre livros
clientes = {}
livros = []
def cadastrar_cliente():
    nome = input("Digite seu nome: ")
    login = input("Crie um login: ")
    senha = input("Crie uma senha: ")
    clientes[login] = {'nome': nome, 'senha': senha}
    print("Cadastro realizado com sucesso!")
def login_cliente():
    login = input("Digite seu login: ")
    senha = input("Digite sua senha: ")
    if login in clientes and clientes[login]['senha'] == senha:
        print(f"Bem-vindo, {clientes[login]['nome']}!")
        return True
    else:
        print("Login ou senha incorretos.")
        return False
def cadastrar_livro():
    titulo = input("Digite o título do livro: ")
    autor = input("Digite o autor do livro: ")
    livros.append({'título': titulo, 'autor': autor})
    print("Livro cadastrado com sucesso!")
def main():
    print("Bem-vindo à Atitus!")
    tem_cadastro = input("Você já tem cadastro? (s/n): ").lower()
    if tem_cadastro == 's':
        if not login_cliente():
            return
    else:
        cadastrar_cliente()
        if not login_cliente():
            return
    while True:
        opcao = input("Deseja cadastrar um livro? (s/n): ").lower()
        if opcao == 's':
            cadastrar_livro()
        else:
            break
    print("Obrigado por usar a Biblioteca Virtual!")
    #mostrar livros cadastrados
    if livros:
        print("Livros cadastrados:")
        for livro in livros:
            print(f"- {livro['título']} de {livro['autor']}")
if __name__ == "__main__":
    main()
